{% extends 'base.html.twig' %}

{% block title %}Lunettes index{% endblock %}

{% block body %}
    <h1>Lunettes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PrixLunettes</th>
                <th>Description</th>
                <th>Quantite</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lunette in lunettes %}
            <tr>
                <td>{{ lunette.id }}</td>
                <td>{{ lunette.prixLunettes }}</td>
                <td>{{ lunette.description }}</td>
                <td>{{ lunette.quantite }}</td>
                <td>{{ lunette.statut ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('lunettes_show', {'id': lunette.id}) }}">show</a>
                    <a href="{{ path('lunettes_edit', {'id': lunette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lunettes_new') }}">Create new</a>
{% endblock %}
