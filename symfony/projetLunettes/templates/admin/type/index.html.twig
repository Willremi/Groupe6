{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}
{% block stylesheets %}
    
{% endblock %}
{% block body %}
    <div class="container">
    <h1>Type index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.nom }}</td>
                <td>{{ type.statut ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('type_show', {'id': type.id}) }}"><button class="btn btn-outline-dark">Voir</button></a>
                    <a href="{{ path('type_edit', {'id': type.id}) }}"><button class="btn btn-outline-dark">Edition</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_new') }}">Create new</a>
    </div>
{% endblock %}
